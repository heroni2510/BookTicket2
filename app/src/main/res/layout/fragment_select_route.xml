<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SelectRoute"
    tools:context=".SelectRouteFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="368dp"
                android:layout_height="248dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="6dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/bus_logo3" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Choose your route"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="368dp"
                android:layout_height="265dp"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="264dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:text="Source:"
                    android:textColor="@color/colorPrimary" />

                <Spinner
                    android:id="@+id/spinnerSrc"
                    android:layout_width="290dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="40dp"
                    android:textAlignment="gravity"
                    app:layout_constraintBottom_toTopOf="@+id/spinnerDes"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    tools:layout_editor_absoluteX="36dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:text="Destination"
                    android:textColor="@color/colorPrimary" />

                <Spinner
                    android:id="@+id/spinnerDes"
                    android:layout_width="290dp"
                    android:layout_height="46dp"
                    android:layout_marginBottom="30dp"
                    android:textAlignment="gravity"
                    app:layout_constraintBottom_toTopOf="@+id/buttonSelect"
                    tools:layout_editor_absoluteX="40dp" />

                <Button
                    android:id="@+id/buttonSelect"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/side_nav_bar"
                    android:text="Select"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="466dp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>